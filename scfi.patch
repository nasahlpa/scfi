+static int hammingDistance(unsigned int n1, unsigned int n2)
+{
+    unsigned int x = n1 ^ n2;
+    unsigned int setBits = 0;
+ 
+    while (x > 0) {
+        setBits += x & 1;
+        x >>= 1;
+    }
+ 
+    return setBits;
+}
+
+static uint32_t MDS_4(uint32_t x) 
+{
+    uint8_t a = x, b = x>>8, c = x>>16, d = x>>24;
+    a ^= b;
+    c ^= d;
+    d ^= LIN(a);
+    b ^= c;
+    
+    b = LIN(b);
+    a ^= b;
+    c ^= LIN(d);
+    d ^= a;
+    b ^= c;
+    return ((((((uint32_t)c<<8) | b)<<8) | a)<<8) | d;
+}
